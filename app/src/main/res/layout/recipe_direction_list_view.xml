<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dip" >

    <!-- ListRow Left side Thumbnail image -->

    <TableLayout
        android:id="@+id/thumbnail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dip"
        android:padding="3dip"
        android:stretchColumns="*">

        <TableRow>
            <TextView
                android:id="@+id/directionStep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. "
                android:textColor="#040404"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="sans"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/thumbnail"
                android:layout_span="1"/>

            <TextView
                android:id="@+id/directions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="some really long directions and stuff some really long directions and stuff some really long directions and stuff some really long directions and stuff"
                android:textColor="#040404"
                android:textSize="20sp"
                android:textStyle="normal"
                android:typeface="sans"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/thumbnail"
                android:layout_span="12"/>
        </TableRow>


    </TableLayout>

