<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:scrollbars="vertical"
    tools:context="com.example.jesse.ist440W.CookingDirectionsFragment">

    <TextView
        android:id="@+id/tvRecipeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Steak "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select All "
        android:id="@+id/chkSelectAll"
        android:checked="false"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/tvRecipeName" />

    <Button
        android:id="@+id/btnAddToShoppingList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:text="Add To Shopping List"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tvRecipeName"
        android:layout_toRightOf="@+id/chkSelectAll"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lvIngredients"
        android:layout_below="@+id/btnAddToShoppingList" />

</RelativeLayout>
